# this is where all conversations are shown. 
@conversations.map do |conversation|
  if conversation.sender_id == current_user.id
    render partial: conversation.recipient, partial: "api/users/user", as: :user
  else 
    render partial: conversation.sender, partial: "api/users/user", as: :user
  end  
end   
